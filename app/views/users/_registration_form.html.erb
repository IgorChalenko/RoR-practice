<%= form_with model: @user, url: registration_path, method: :post, class: "border rounded p-4 mt-5" do |form|%>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |msg|%>
        <div><%= msg %></div>
      <%end%>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.text_field :username, placeholder: "Username", class: "form-control" %>
  </div> 
  <div class="mb-3">
    <%= form.email_field :email, placeholder: "Email", class: "form-control" %>
  </div> 
  <div class="mb-3">
    <%= form.password_field :password, placeholder: "Password", class: "form-control"%>
  </div> 
  <div class="mb-3">
    <%= form.password_field :password_confirmation, placeholder: "Confirmation", class: "form-control"%>  
  </div> 
  <div class="mb-3">
    <%= form.submit method: :post, class: "btn btn-primary" %>  
  </div>
<% end %>    