<%= form_with model: @user, url: password_reset_update_path(token: params[:token]), class: "border rounded p-4 mt-5" do |form|%>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <% form.object.errors.full_messages.each do |msg|%>
        <div><%= msg %></div>
      <%end%>
    </div>
  <% end %>
  <h5>Set new password</h5>
  <div class="mb-3">
  <%= form.password_field :password, class: "form-control", placeholder: "Password"%>
  </div> 
  <div class="mb-3">
  <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation"%>
  </div>
  <div class="mb-3 d-flex justify-content-between pe-5">
    <%= form.submit "Change password", class: "btn btn-primary" %>
  </div> 
<% end %>
