<%= form_with model: @user, url: login_path, method: :post, class: "border rounded p-4 mt-5" do |f|%>
  <div class="mb-3">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div> 
  <div class="mb-3">
    <%= f.password_field :password, class: "form-control", placeholder: "Password"%>
  </div> 
  <div class="mb-3 d-flex justify-content-between pe-5">
    <%= f.submit "Login", class: "btn btn-primary" %>
    <div class="form-check">
      <%= check_box_tag :remember_me, 'Remember me', false, class: "form-check-input" %>
      <%= label_tag :remember_me, "Remember me", class: "form-check-label" %>
    </div> 
  </div>
  <% if allowed_to?(:reset_password?, User)%>
    <%= link_to 'Forgot password?', reset_password_path, class: 'text-end nav-link text-primary', style: 'margin-top: -31px; margin-right: 32px;' %> 
  <% end %>  
<% end %>