<%= form_tag login_path, method: :post, class: "border rounded p-4 mt-5" do%>
  <div class="mb-3">
    <%= email_field_tag :email, params[:email], class: "form-control", placeholder: "Email" %>
  </div> 
  <div class="mb-3">
    <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password"%>
  </div> 
  <div class="mb-3 d-flex justify-content-between pe-5">
    <%= submit_tag "Login", class: "btn btn-primary" %>
    <div class="form-check">
      <%= check_box_tag :remember_me, 'Remember me', false, class: "form-check-input" %>
      <%= label_tag :remember_me, "Remember me", class: "form-check-label" %>
    </div> 
  </div>
  <%= link_to 'Forgot password?', password_reset_path, class: 'text-end nav-link text-primary', style: 'margin-top: -31px; margin-right: 32px;' %> 
<% end %>