<div class="card mb-3 shadow-sm p-3 mb-5 bg-body rounded">
      <div class="card-body">
        <div class="row">
          <div class="col-8">
            <h6>Title</h6>
            <%= link_to "#{upcoming[:title]}", poll_path(upcoming[:id]), class: "nav-link" %>
          </div>
          <div class="col-2">
            <h6>Author</h6>
            <p class="text-primary"><%= upcoming.user.username %></p>
          </div>
          <div class="col-2">
            <h6>Start date</h6>
            <p><%= upcoming[:start_date] %></p>
          </div>
        </div>
      </div>
</div>