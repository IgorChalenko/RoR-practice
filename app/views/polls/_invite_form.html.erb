<%= form_tag invite_path, method: :post, class: "border rounded p-4 mt-5" do %> 
  <div class="mb-3">
      <%= text_field_tag :username, params[:username], class: "form-control" %>
  </div> 
  <div class="col-3">
      <%= submit_tag "Send invite", class: "btn btn-primary" %>     
  </div>
<% end %>